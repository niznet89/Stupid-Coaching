<div class="modal modal-sheet d-block bg-secondary py-5 h-100 row align-items-center" tabindex="-1" role="dialog" id="modalSheet">
  <div class="modal-dialog py-5 col" role="document">
    <div class="modal-content rounded-6 shadow">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title">Coaches Answer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body py-0">
        <p>Coaches answer: <%= @return%></p>
      </div>
      <form class="modal-footer flex-column border-top-0" action='/ask'>
        <button action='/ask' type="submit" class="btn btn-lg btn-primary w-100 ">Go back to ask form</button>
      </form>
    </div>
  </div>
</div>
